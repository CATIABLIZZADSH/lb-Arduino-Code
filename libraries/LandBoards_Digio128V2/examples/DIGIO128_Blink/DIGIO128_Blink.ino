/////////////////////////////////////////////////////////////////////////////////////////////////
// D128LibV2_Blink code
// Blink LED on bit 0
/////////////////////////////////////////////////////////////////////////////////////////////////

#include "LandBoards_Digio128V2.h"

LandBoards_Digio128V2 Dio128;		// Call the class constructor for the DigIO-128 card

/////////////////////////////////////////////////////////////////////////////////////////////////
// setup() - Initialize the card
/////////////////////////////////////////////////////////////////////////////////////////////////

void setup(void)
{
  Dio128.begin();              				// connects to the 8 MCP23017 parts
  Dio128.pinMode(0, OUTPUT);    			// make first bit an output
  for (uint8_t pin = 1; pin < 128; pin++)
    Dio128.pinMode(pin, INPUT_PULLUP);    	// make all other pins into INPUTs
}

/////////////////////////////////////////////////////////////////////////////////////////////////
// flip the bit #0 up and down
/////////////////////////////////////////////////////////////////////////////////////////////////

void loop(void)
{
  Dio128.digitalWrite(0, HIGH);
  delay(250);
  Dio128.digitalWrite(0, LOW);
  delay(250);
}
