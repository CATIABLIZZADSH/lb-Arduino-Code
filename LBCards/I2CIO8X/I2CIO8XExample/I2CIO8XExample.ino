#include <Wire.h>
#include <LandBoards_I2CIO8X.h>

LandBoards_I2CIO8X MyI2CIO8X;

////////////////////////////////////////////////////////////////////////////
// setup() - 
////////////////////////////////////////////////////////////////////////////

void setup()
{
  MyI2CIO8X.begin(0);     // use default address 0
}

////////////////////////////////////////////////////////////////////////////
// loop() - 
////////////////////////////////////////////////////////////////////////////

void loop()
{
  for (int jumper = 0; jumper < 8; jumper++)
  {
    Serial.print("Jumper ");
    Serial.print(jumper);
    Serial.println(MyI2CIO8X.readJumper(H4JUMPER));
  }
}
